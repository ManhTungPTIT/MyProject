
@using MyProject.Models.Dtos
@model MyProject.Models.Model.Customers
@{
    Layout = "_Layout";
    var list = ViewData["ListCustomer"] as List<CustomerDto>;
}
<link rel="stylesheet" href="/css/Home.css"/>
<div class="tab-pane active">
    <button id="add" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#Add">
        Add
    </button>
    
    <!-- The Modal -->
    <div class="modal" id="Add">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Infomation Customer</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body d-flex flex-column align-items-center">
            <input
                      class="input"
                      type="text"
                      placeholder="User Name"
                      asp-for="UserName"
                    />
                    <input
                      class="input"
                      type="text"
                      placeholder="Address"
                      asp-for="Address"
                    />
                    <input class="input" type="date" asp-for="CreateOn" />
          </div>
    
          <!-- Modal footer -->
          <div class="modal-footer">
              <button type="submit" class="btn btn-danger" data-bs-dismiss="modal" 
                      asp-action="AddCustomer" asp-controller="Customer">Add</button>
          </div>
    
        </div>
      </div>
    </div>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>UserName</th>
        <th>Phone</th>
        <th>Address</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var cus in list)
    {
        <tr>
            <td>@cus.Id</td>
            <td>@cus.UserName</td>
            <td>@cus.Phone</td>
            <td>@cus.Address</td>
            <td>
                <form asp-action="Delete" asp-controller="Customer" asp-route-customerID="@cus.Id">
                    <i type="submit" class="fa-solid fa-trash" style="color: #db2424; cursor: pointer"></i>
                </form>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal/@cus.Id" style="border: none; background-color: unset">
                    <i class="fa-solid fa-file-pen ms-4" style="color: #db923d"></i>
                </button>
            </td>
        </tr>

        <!--  Edit -->
        <form asp-action="Edit" method="post">
            <div class="modal" id="#myModal/@cus.Id">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <!-- Modal Header -->
                        <div class="modal-header">
                            <h4 class="modal-title">Edit</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal body -->
                        <div class="modal-body">
                            <input class="Edit_info" type="text" value="@cus.UserName" asp-for="UserName"/>
                            <input class="Edit_info" type="text" value="@cus.Phone" asp-for="Phone"/>
                            <input class="Edit_info" type="text" value="@cus.Address" asp-for="Address"/>
                            <input class="Edit_info" type="date" value="@cus.CreateOn" asp-for="CreateOn"/>
                        </div>

                        <!-- Modal footer -->
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">Save</button>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    }
    </tbody>
</table>
