@{
  Layout = "";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/CSS/HomeEmployee.css" />
  </head>
  <body>
    <div
      class="container d-flex justify-content-center flex-column mt-3"
      style="width: 100vw"
    >
      <input type="text" readonly id="text" name="money" data-value=""/>
      <ul id="keyboard">
        <div class="symbol">
          <p class="off">1</p>
        </div>
        <div class="symbol">
          <p class="off">2</p>
        </div>
        <div class="symbol">
          <p class="off">3</p>
        </div>
        <div class="symbol">
          <p class="off">4</p>
        </div>
        <div class="symbol">
          <p class="off">5</p>
        </div>
        <div class="symbol">
          <p class="off">6</p>
        </div>
        <div class="symbol">
          <p class="off">7</p>
        </div>
        <div class="symbol">
          <p class="off">8</p>
        </div>
        <div class="symbol">
          <p class="off">9</p>
        </div>
        <div class="symbol">
          <p class="off">000</p>
        </div>
        <div class="symbol">
          <p class="off">0</p>
        </div>
        <div class="symbol" style="background-color: red" id="delete">
          <p class="off">X</p>
        </div>
      </ul>
      <button type="submit" asp-action="Index" asp-controller="Home">Submit</button>
    </div>
  </body>

  <script>
    var total = document.getElementById("text");
    var Delete = document.getElementById("delete");
    var buttons = document.querySelectorAll(".symbol");
    buttons.forEach((element) => {
      element.onclick = function () {
        console.log(element.textContent.trim().length);
        total.value += element.textContent.trim();
      };
    });

    Delete.onclick = function () {
      if (total.value != null) {
        var price = total.value;
        price = price.substring(0, price.length - 1);
        total.value = price;
      }
    };

    total.setAttribute("data-value", total);
    
  </script>
</html>
