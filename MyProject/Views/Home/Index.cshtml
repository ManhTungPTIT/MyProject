@using MyProject.Models.Model
@{
    Layout = "";
    var list = ViewBag.ListProduct as List<Product>;
    var listOrder = ViewData["OrderProduct"] as List<Bill>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <nav>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"/>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"/>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <link rel="stylesheet" href="/css/HomeEmployee.css"/>
    </nav>
</head>
<body>
<div class="card-text d-flex justify-content-between" style="background-color: #fd7e14; padding: 0.6rem 5vw; height: 4rem">
    <p class="fs-4" style="color: white">@User.Identity!.Name</p>
    <a class="fs-4" asp-action="Logout" asp-controller="Authentication" style="color: white; text-decoration: none">Log out</a>
</div>
<div class="container-fluid">
    <div class="row d-flex flex-row justify-content-between">
        <div class="Main col-6">
            <div class="List-item">
                @if (list != null)
                {
                    @foreach (var product in list)
                    {
                        <div class="Item">
                            <div class="Item-img">
                                <img
                                    src="@product.Avatar"
                                    alt=""
                                    id="image"/>
                            </div>
                            <p id="name">@product.ProductName</p>
                            <p id="price">@product.Price</p>
                            <button id="add" data-productId="@product.Id">Thêm vào giỏ</button>
                        </div>
                    }
                }
                else
                {
                    <p>Không có sản phẩm trong data</p>
                }


            </div>
        </div>

        <div class=" col-4" id="bill">
            @Html.Partial("OrderCurrent", listOrder)
        </div>
    </div>
</div>

<script src="/js/update_cart.js"></script>

</body>
</html>